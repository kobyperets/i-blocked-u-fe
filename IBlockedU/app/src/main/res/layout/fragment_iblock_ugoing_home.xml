<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salesforce.iblockedu.IBlockUGoingHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewHomeMessage"
            android:layout_marginTop="133dp"
            android:src="@drawable/blocked_car" />

        <TextView
            android:id="@+id/textViewHomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="197dp"
            android:text="" />

        <Button
            android:id="@+id/btnUnblock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewHomeMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:onClick="handleUnblock"
            android:text="Unblock" />
    </RelativeLayout>
</FrameLayout>
